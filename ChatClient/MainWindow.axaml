<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="700"
        x:Class="ChatClient.MainWindow"
        Title="ChatClient"
        WindowStartupLocation="CenterScreen"
        Width="1000" Height="700">

        <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,*, Auto">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="IP Server:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="IpTextBox" Width="100" Text="127.0.0.1"/>
                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="PortTextBox" Width="50" Text="8888"/>
                <TextBlock Text="Username:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="UsernameTextBox" Width="100"/>
                <Button x:Name="ConnectButton" Content="Connect" Margin="10,0" Padding="10,2" Click="ConnectButton_Click"/>
                <Button x:Name="DisconnectButton" Content="Disconnect" IsEnabled="False" Padding="10,2" Click="DisconnectButton_Click"/>
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,0">
                <StackPanel>
                    <TextBlock Text="User Aktif" FontWeight="Bold" Margin="10"/>
                    <ListBox x:Name="UserList"/>
                </StackPanel>
            </Border>    

            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="0,0,0,1">
                <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChatPanel"/>
                </ScrollViewer>
            </Border>

            <DockPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                
            <Button x:Name="SendButton"
                    Width="60"
                    DockPanel.Dock="Right"
                    Margin="5,0,0,0" Click="SendButton_Click"> 
                <TextBlock Text="âž¤" TextAlignment="Center"/>
            </Button>
        
            <TextBox x:Name="MessageTextBox"
                    Watermark="Ketik pesan..."
                    VerticalAlignment="Center" KeyDown="MessageTextBox_KeyDown"/>
            </DockPanel>

        </Grid>
</Window>